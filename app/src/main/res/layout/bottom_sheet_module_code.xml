<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/module_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Module Code"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/module_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Module Name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/module_lecturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lecturer"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/module_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/module_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/module_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/module_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time"
        android:textSize="16sp" />

    <Button
        android:id="@+id/hide_show_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hide Module" />
    <!-- Add more details or buttons after this point -->

</LinearLayout>