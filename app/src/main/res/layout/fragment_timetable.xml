<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".timetable.TimetableFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".timetable.TimetableFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/timetable_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Timetable"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Day headers -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Time"
                            android:textStyle="bold"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Monday"
                            android:textStyle="bold"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Tuesday"
                            android:textStyle="bold"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Wednesday"
                            android:textStyle="bold"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Thursday"
                            android:textStyle="bold"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Friday"
                            android:textStyle="bold"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- Timetable grid -->
                    <TableLayout
                        android:id="@+id/timetable_grid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stretchColumns="*">
                        <!-- Time slots will be added here programmatically -->
                    </TableLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No modules scheduled"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone"/>

            <!-- Module Management Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Left: Text -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Module Management"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/add_module_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="Add Module"
                    android:contentDescription="@string/add_module"
                    android:src="@android:drawable/ic_menu_add" />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/module_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>